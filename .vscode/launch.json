{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Start a dev server",
        "program": "${workspaceFolder}/node_modules/.bin/gatsby",
        "cwd": "${workspaceFolder}",
        "args": [
          "build"
        ],
        "preLaunchTask": "clean"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha Tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "packages/**/__tests__/*"
        ],
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }