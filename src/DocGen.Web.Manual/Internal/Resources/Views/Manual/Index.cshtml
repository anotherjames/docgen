@model ManualModel

<div class="coversheet">
    <p>
        <img style="width: 100%" src="@Model.Coversheet.ProductImage" />
    </p>
    <p>
        <img style="width: 100%;" src="@Model.Coversheet.ProductLogo" />
    </p>
    <p>@Model.Coversheet.Model</p>
    <p>@Model.Coversheet.Text</p>
</div>

@*This is after the coversheet, since it isn't on the first page.*@
<div class="page-number-container left">
    Page number <span class="page-number-text"></span>
</div>
<div class="page-number-container right">
    Page number <span class="page-number-text"></span>
</div>


<div class="toc">
    @foreach (var section in Model.Sections)
    {
        foreach (var tocEntry in section.TableOfContents)
        {
            <div class="entry level-@tocEntry.Level">
                <a href="#@tocEntry.Id">@tocEntry.Title</a>
            </div>
        }
    }
</div>

<div>
    @foreach (var section in Model.Sections)
    {
        <div class="section">
            @Html.Raw(section.Html)
            <p class="figure">
                Test <span class="figure-text">value</span>
            </p>
            <p class="figure">
                Test <span class="figure-text">value</span>
            </p>
        </div>
    }
</div>